{
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "all",
  "printWidth": 80,
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "parser": "html",
        "printWidth": 80,
        "tabWidth": 2,
        "singleQuote": false,
        "htmlWhitespaceSensitivity": "css"
      }
    },
    {
      "files": ["*.css", "*.scss", "*.less"],
      "options": {
        "parser": "css",
        "printWidth": 80,
        "tabWidth": 2,
        "singleQuote": true
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "options": {
        "parser": "babel",
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all"
      }
    },
    {
      "files": "*.json",
      "options": {
        "parser": "json",
        "tabWidth": 2
      }
    },
    {
      "files": ["*.yaml", "*.yml"],
      "options": {
        "parser": "yaml",
        "tabWidth": 2,
        "singleQuote": false
      }
    }
  ]
}
